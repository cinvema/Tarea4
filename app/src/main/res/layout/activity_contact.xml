<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:src="@drawable/usuario" />


    <LinearLayout
        android:id="@+id/layout_nombre"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="77"
            android:maxLines="1"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_correo"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/layout_nombre"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="Correo:" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="77"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_correo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="33"
            android:text="Edad:" />

        <SeekBar
            android:id="@+id/sekbar_edad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="60" />

        <TextView
            android:id="@+id/edad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="15"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_telefono"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/layout_edad"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="TelÃ©fono:" />

        <EditText
            android:id="@+id/telefono"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="77"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/layout_telefono"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="Provincia:" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="77" />

    </LinearLayout>


    <Button
        android:id="@+id/agregar"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="Agregar" />

</RelativeLayout>